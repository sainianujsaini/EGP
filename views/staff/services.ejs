          <!-- Half Width -->
          <div class="container mt-1 mb-2">
            <div class="search-container">
              <input
                type="text"
                id="search-input"
                class="form-control search-bar"
                placeholder="Search by card title..."
                onkeyup="filterCards()"
              />
              <i class="fa fa-search search-icon"></i>
            </div>
          </div>
          
          <div class="card-deck">
            <% for(var i = 0 ; i < services.length ; i++){ %>
            <div class="card p-2 m-2" style="width: 18rem;">
                <img class="card-img-top" alt="Card image cap" src="/images/Services/<%= services[i].img_url %>">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><%= services[i].service_name %></h5>
                    <p class="card-text flex-grow-1"><%= services[i].service_detail %></p>
                    <a href="/staff/view_service/<%=services[i].id%>" class="btn btn-primary mt-auto">View Details</a>
                </div>
            </div>
            <% } %>
        </div>
    </div>

    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>

<script>
    function filterCards() {
  // Get the search input value and convert it to lowercase
  const searchInput = document.getElementById('search-input').value.toLowerCase();
  
  // Get all the card elements
  const cards = document.querySelectorAll('.card');
  
  // Loop through each card
  cards.forEach((card) => {
    // Get the card title and convert it to lowercase
    const cardTitle = card.querySelector('.card-title').innerText.toLowerCase();
    
    // Check if the card title includes the search input
    if (cardTitle.includes(searchInput)) {
      card.style.display = ''; // Show the card if it matches the search input
    } else {
      card.style.display = 'none'; // Hide the card if it doesn't match
    }
  });
}
</script>

